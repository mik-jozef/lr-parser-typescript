{
  "testMatch": [ "**/*.test.ts?(x)" ],
  "transform": {
    "^.+\\.tsx?$": [ "ts-jest", {
      "useESM": true,
      "tsconfig": "tsconfig.json",
      "diagnostics": {
        "warnOnly": true,
        "ignoreCodes": [ "TS151001" ]
      }
    } ]
  },
  "moduleNameMapper": {
    "^(.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [ ".ts" ],
  "setupFiles": [
    "<rootDir>/jest.setup.ts"
  ]
}