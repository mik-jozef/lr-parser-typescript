{
  "compileOnSave": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": [ "es2020" ],
    "newLine": "lf",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "local/out",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
  },
}
